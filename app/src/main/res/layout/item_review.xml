<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_review_click_receiver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_text"
        android:orientation="vertical">

        <TextView
            android:id="@+id/review_author_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/body_text_top_margin"
            android:text="@string/placeholder"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/review_body_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4sp"
            android:paddingBottom="@dimen/title_text_top_margin"
            android:paddingTop="@dimen/body_text_top_margin"
            android:text="@string/placeholder"
            android:textColor="@color/material_grey300" />

    </LinearLayout>

</android.support.v7.widget.CardView>